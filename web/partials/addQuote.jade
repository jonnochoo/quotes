.columns.small-12
  include message

  h2 Add A Quote
  form(name='form', method='POST', novalidate)
    
    .form-group
      label Text
      textarea(ng-model='quote.text', required, placeholder="Enter the quote...").form-control

    .form-group
      label Author
      input(ng-model='quote.author', type='text').form-control

    .form-group
      label Source
      input(ng-model='quote.source', type='text').form-control

    .form-group
      label Tags
      input(ng-model='quote.tags', type='text').form-control

      button(ng-click="addQuote()").button.small Add