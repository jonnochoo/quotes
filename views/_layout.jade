doctype html
html(ng-app="app")
  head
    title Quotes
    meta(name='viewport' content='width=device-width', initial-scale='1.0')
    link(rel='stylesheet', href='/css/foundation.min.css')
    link(rel='stylesheet', href='/css/app.css')

    link(ref='http://fonts.googleapis.com/css?family=Arvo' rel='stylesheet' type='text/css')
  body(ng-controller="ParentController", ng-cloak)
    jc-notification
    header
      .row        
        nav.large-12.columns
          ul.button-group.right
            li
              a(ng-click="changeView('/quote/new')") add
            li
              a(ng-click="changeView('/')") all
            li
              a(ng-click="changeView('/quote/random')") random
            li
              a(ng-click="changeView('/tags')") tags


    .row
      div(ng-show="message.type == 'error'").alert.alert-danger {{ message.text }}
      div(ng-show="message.type == 'info'").alert.alert-info {{ message.text }}
      
      block content

    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-animate.js")
    script(src="/js/app.js")
    script(src="/js/constants.js")
    script(src="/js/dataServices/quotesDataService.js")
    script(src="/js/directives/animateList.js")
    script(src="/js/directives/spinner.js")
    script(src="/js/directives/notificationDirective.js")
    script(src="/js/services/notificationService.js")
    script(src="/js/controllers/parentController.js")
    script(src="/js/controllers/indexController.js")
    script(src="/js/controllers/addQuoteController.js")
    script(src="/js/controllers/editQuoteController.js")
    script(src="/js/controllers/randomQuoteController.js")
    script(src="/js/controllers/tagsController.js")
    script(src="/js/controllers/tagQuoteController.js")
    